# Environment configuration for Ashveil website
# Copy this file to .env.local and set your actual values

# Data source configuration
REACT_APP_USE_REAL_DATA=false
REACT_APP_API_BASE_URL=https://ashveil-website.onrender.com

# Feature flags - set to true when ready for production
REACT_APP_REAL_INVENTORY=false
REACT_APP_REAL_CURRENCY=false
REACT_APP_REAL_PLAYER_DATA=false
REACT_APP_REAL_SERVER_STATUS=false
REACT_APP_RCON_ENABLED=false

# Steam API (get from steamcommunity.com/dev/apikey)
REACT_APP_STEAM_API_KEY=your_steam_api_key_here

# Development defaults
REACT_APP_DEV_PLAYER_NAME=TestPlayer
REACT_APP_DEV_STEAM_ID=76561198000000000